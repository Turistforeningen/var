{
  "env": {
    "mocha": true
  },
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "script",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "modules": false
    }
  },
  "rules": {
    "no-param-reassign": [2, {"props": false}],
    "no-underscore-dangle": [2, {"allow": ["_id"]}],
    "no-unused-vars": [2, {"args": "none"}],
    "object-curly-spacing": [2, "never"],
    "object-shorthand": [2, "consistent"]
  }
}
